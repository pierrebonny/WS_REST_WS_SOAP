<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <services>

      <!--********************************** Service1 ********************************** -->
      <service name="velibService.Service1" behaviorConfiguration="Service1Behavior">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:9011/velibService"/>
          </baseAddresses>
        </host>

        <endpoint address="" binding="wsDualHttpBinding" contract="velibService.IService1"/>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
      </service>
    </services>

    <!-- ********************************** behaviors ********************************** -->
    <behaviors>
      <serviceBehaviors>
        <!-- CalcService Behavior -->
        <behavior name="Service1Behavior">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true "/>
        </behavior>
      </serviceBehaviors>
    </behaviors>

  </system.serviceModel>
</configuration>